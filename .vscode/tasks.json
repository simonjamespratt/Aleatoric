{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build library in debug",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/build-library-debug.sh",
            "group": "build"
        },
        {
            "label": "Build tests",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/build-tests.sh",
            "group": "build"
        },
        {
            "label": "Run in debug",
            "type": "shell",
            "command": "${workspaceFolder}/build/debug/test",
            "args": [
                "-r console",
                "-d yes",
                "-s"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOrder": "sequence",
            "dependsOn": ["Build library in debug", "Build tests"]
        }
    ]
}
